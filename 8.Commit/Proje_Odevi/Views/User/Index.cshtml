@model List<UserModel>
@{

    ViewData["Title"] = "Kullanıcılar";

}

<div class="row">

    <div class="col">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <hr />
    </div>
</div>


<div class="row mb-3">
    <div class="col">
        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th>Ad Soyad</th>
                    <th>Kullanıcı Adı</th>
                    <th>Kilitli</th>
                    <th>Rol</th>
                    <th>Oluştur</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (UserModel user in Model)
                {
                    <tr>
                        <td>@user.NameSurname</td>
                        <td>@user.Username</td>
                        <td>
                            @if (user.Locked)
                            {
                                <i class="fa fa-check text-success"></i>
                            }
                            else
                            {
                                <i class="fa fa-times text-danger"></i>
                            }
                        </td>
                        <td>@user.Role</td>
                        <td>@user.CreatedAt</td>
                          <td class="text-end">
                              <button type="button" class="btn btn-info btn-sm text-white"><i class="fa fa-edit me-2"></i>Düzenle</button>
                            <button type="button" class="btn btn-info btn-sm"><i class="fa fa-trash me-2"></i>Kaldır</button>
                          </td>
                          
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>