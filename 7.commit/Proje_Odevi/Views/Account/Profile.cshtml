@{

    ViewData["Title"] = "Profile Hoşgeldiniz";

}


<div class="row">
    <div class="col-4 offset-4">

        <h1 class="display-4 border-bottom text-center pb-2 "> @ViewData["Title"] </h1>

    </div>
</div>

<div class="row mt-4">
    <div class="col-6  offset-6 my-3">
        <div class="mb-4">
            <div asp-validation-summary="All" class="text-danger small"></div>
        </div>
    </div>
    
    <div class="col-6">
        <form method="post" asp-action="ProfileChangeImage" 
        enctype="multipart/form-data">
         
        <div class="text-center mb-3">
                <img src="~/uploads/@ViewData["ProfileImage"]" width="250" class="img-thumbnail rounded-circle" />
            </div>
            <div class="form-group mb-3">
            <label class="form-label small">Profil Resmi</label>
            <input type="file" name="file" class="form-control my-2" accept=".jpg, .jpeg" />
            <div class="text-secondary">
                <span class="small"><i class="fa fa-info-circle me-2"></i>Sadece jpg ve jpeg dosyaları
               </span> 
               </div>
                <div class="text-center mt-3">
                    <button class="btn btn-secondary" type="submit"><i class=" fa-regular fa-floppy-disk me-1"></i><b>Kaydet</b></button>
                </div>
        </div>
            </form>
    </div>
            <div class="col-6">
                
                <form method="post" asp-action="ProfileChangeFullName">
                    <div class="form-group">
                <label class="form-label small"><b>Ad Soyad</b></label>
                <div class="input-group mb-3">
                <input name="fullname" type="text" class="form-control" placeholder="Ad Soyad" value="@ViewData["FullName"]" />
                    <button class="btn btn-secondary" type="submit"><i class=" fa-regular fa-floppy-disk me-1"></i><b>Kaydet</b></button>
                </div>
                    </div>
                </form>
        <form method="post" asp-action="ProfileChangePassword">
            <div class="form-group">
                <label class="form-label small"><b>Yeni Şifre</b></label>
                <div class="input-group">
                    <input name="Password" type="password" class="form-control" placeholder="Şifre" />
                    <button class="btn btn-secondary" type="submit" ><i class=" fa-regular fa-floppy-disk me-1"></i><b>Kaydet</b></button>
                </div>
                @if (ViewData["result"] != null && ViewData["result"] == "Şifre Değiştirildi")
                {
                    <span class="text-success small">Şifre Güncellendi.</span>
                }
            </div>
        </form>
    </div>
</div>
@section Scripts{
    @if (ViewData["result"] != null && ViewData["result"] == "Şifre Değiştirildi")
{
    <script>
        toastr["success"]("Şifre Değiştirilmiştir.", "Şifre Değişti!");
    </script>
}
}