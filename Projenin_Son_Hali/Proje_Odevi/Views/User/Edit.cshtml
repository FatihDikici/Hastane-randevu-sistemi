@model EditUserModel
@{
    
    ViewData["Title"] = "Kullanıcı Düzenle";

}


<div class="row">
    <div class="col-4 offset-4">

        <h1 class="display-4 border-bottom text-center pb-2 "> @ViewData["Title"] </h1>
   
    </div>
</div>

<div class="row"> 

    <div class="col-4 offset-4">

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
            <div class="form-group mb-3">
                <label asp-for="NameSurname" class="form-label">Ad Soyad</label>
                <input asp-for="NameSurname" class="form-control" placeholder="Adınızı giriniz" />
                <span asp-validation-for="NameSurname" class="text-danger small"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label">Kullanıcı Adı</label>
                <input asp-for="Username" class="form-control" placeholder="Adınızı giriniz" />
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Role" class="form-label">Role</label>
                <select asp-for="Role" class="form-select">
                    <option value="">lütfen seçin</option>
                    <option value="Admin">Admin</option>
                    <option value="User">Kullanıcı</option>
                </select>
                <span asp-validation-for="Role" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
               <div class="form-check">
                   <input class="form-check-input" type="checkbox" asp-for="Locked"/>
                   <label class="form-check-label" asp-for="Locked">Kilitli</label>
               </div>
            </div>
            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary" style=background-color:red;><i class="fa-solid fa-save me-2"></i>Kaydet</button>
            </div>

        </form>

    </div>

</div>
    


